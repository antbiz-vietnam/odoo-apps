<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="s_product_carousel_grid_snippet_template">
    <section t-attf-class="#{snippet_name} #{snippet_classes} s_dynamic s_dynamic_empty pt32 pb32" t-att-data-snippet="snippet_name" t-att-data-custom-template-data="custom_template_data or '{}'">
      <div class="container">
        <div class="row s_nb_column_fixed">
          <section class="s_dynamic_snippet_title oe_unremovable oe_unmovable d-flex flex-column flex-md-row justify-content-between mb-lg-0 pb-3 pb-md-0">
            <div>
              <h4>Antbiz: Our latest content</h4>
              <p class="lead">Check out what's new in our company !</p>
            </div>
          </section>
          <section class="s_dynamic_snippet_content oe_unremovable oe_unmovable o_not_editable col">
            <div class="css_non_editable_mode_hidden">
              <div class="missing_option_warning alert alert-info fade show d-none d-print-none rounded-0">
                            Your Dynamic Snippet will be displayed here... This message is displayed because you did not provide both a filter and a template to use.
                <br/>
              </div>
            </div>
            <div class="dynamic_snippet_template">
              <t t-out="0"/>
            </div>
          </section>
          <div class="mt-2 d-flex justify-content-center">
            <a title="See All" class="s_dynamic_snippet_main_page_url d-none" href="#">See all
              <i class="fa fa-long-arrow-right ms-2"/>
            </a>
          </div>
        </div>
      </div>
    </section>
  </template>
  <template id="s_product_carousel_grid_snippet" name="Product Grid">
    <t t-call="antbiz_products.s_product_carousel_grid_snippet_template">
      <t t-set="snippet_name" t-value="'s_product_carousel_grid_snippet'"/>
      <t t-call="antbiz_products.s_product_carousel_grid_snippet_preview"/>
    </t>
  </template>
  <template id="snippets" inherit_id="website.snippets" name="Devque Product Grid Snippets">
    <xpath expr="//snippets[@id='snippet_structure']" position="inside">
      <t t-snippet="antbiz_products.s_product_carousel_grid_snippet" string="Products Carousel Grid" group="products"/>
    </xpath>
  </template>
  <record id="antbiz_products.s_product_carousel_grid_snippet_constants_js" model="ir.asset">
    <field name="name">Dynamic snippet products constants JS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">antbiz_products/static/src/snippets/s_product_carousel_grid_snippet/constants.js</field>
  </record>
  <record id="antbiz_products.s_product_carousel_grid_snippet_000_js" model="ir.asset">
    <field name="name">Dynamic snippet products 000 JS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">antbiz_products/static/src/snippets/s_product_carousel_grid_snippet/000.js</field>
  </record>
</odoo>